# Azure Container Registry
ACR_NAME=myacr.azurecr.io

# Foundry Agent Configuration
FOUNDRY_AGENT_ENDPOINT=https://your-foundry-endpoint.ai.azure.com/invoke
FOUNDRY_API_KEY=your-api-key-here

# Risk Thresholds
FX_VAR_THRESHOLD=100000
IR_DV01_THRESHOLD=50000
MARKET_SHOCK_THRESHOLD=2.0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq.rabbitmq.svc.cluster.local
RABBITMQ_PORT=5672
RABBITMQ_USER=user
RABBITMQ_PASS=password

# Service URLs (for local testing)
MCP_CONTRACTS_URL=http://localhost:8001
MCP_RISK_URL=http://localhost:8002
MCP_MARKET_URL=http://localhost:8003

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASS=admin

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector.platform.svc.cluster.local:4317

# Python Environment
PYTHONPATH=./shared
