# Azure AI Foundry Configuration for Agent Deployment
# Copy this file to .env and fill in your values

# Azure AI Foundry Project Configuration
PROJECT_ENDPOINT=https://your-project.api.azureml.ms
MODEL_DEPLOYMENT_NAME=gpt-4o

# MCP Service URLs (automatically configured during deployment)
# These use Kubernetes internal DNS for agent-to-service communication
# URLs must end with /mcp for http-streamable protocol
MCP_CONTRACTS_URL=http://mcp-contracts.tools.svc.cluster.local:8000/mcp
MCP_RISK_URL=http://mcp-risk.tools.svc.cluster.local:8000/mcp
MCP_MARKET_URL=http://mcp-market.tools.svc.cluster.local:8000/mcp

# Optional: For external access (e.g., during testing)
# Uncomment and use when accessing MCP services from outside the cluster
# MCP_CONTRACTS_URL=http://localhost:8001/mcp
# MCP_RISK_URL=http://localhost:8002/mcp
# MCP_MARKET_URL=http://localhost:8003/mcp

# Agent Configuration
# Thresholds for triggering agent invocations
FX_VAR_THRESHOLD=100000
IR_DV01_THRESHOLD=50000
MARKET_SHOCK_THRESHOLD=2.0
